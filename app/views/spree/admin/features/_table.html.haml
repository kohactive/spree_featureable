%table.index#product_features{"data-hook" => "product_features_table"}
  %colgroup
    %col{style: "width: 10%"}
    %col{style: "width: 20%"}
    %col{style: "width: 30%"}
    %col{style: "width: 30%"}
    %col{style: "width: 10%"}
    %col{style: "width: 10%"}
  %thead
    %tr{"data-hook" => "product_features_header"}
      %th= Spree.t('')

      %th= Spree.t('sale_price_active')
      %th= Spree.t('sale_price')
      %th= Spree.t('sale_price_start_at')
      %th= Spree.t('sale_price_end_at')
      %th= Spree.t('sale_price_enabled')
      %th.actions
  %tbody
    = render partial: "sale_price", collection: product.master.sale_prices, locals: {product: product}